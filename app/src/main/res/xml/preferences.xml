<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="theme_category"
        app:title="Theme">

        <ListPreference
            app:key="@string/theme_preference_key"
            app:title="Choose theme"
            app:defaultValue="default"
            app:dialogTitle="Choose theme"
            app:entries="@array/theme_list_array"
            app:entryValues="@array/theme_entry_array"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
    <PreferenceCategory
        app:key="storage_category"
        app:title="Storage">
        <Preference
            app:key="@string/storage_preference_key"
            app:title="Set Directory"
            app:defaultValue="default"
            />

    </PreferenceCategory>
</PreferenceScreen>
