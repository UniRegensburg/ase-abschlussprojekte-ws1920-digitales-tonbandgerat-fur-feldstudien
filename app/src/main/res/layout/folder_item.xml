<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="folder"
            type="de.ur.mi.audidroid.models.FolderEntity" />
        <variable
            name="isSubfolder"
            type="Boolean" />
        <variable
            name="filesViewModel"
            type="de.ur.mi.audidroid.viewmodels.FilesViewModel" />
        <variable
            name="recordingAdapter"
            type="de.ur.mi.audidroid.adapter.RecordingItemAdapter" />
        <variable
            name="listener"
            type="de.ur.mi.audidroid.adapter.FolderUserActionsListener" />
        <variable
            name="isExpanded"
            type="Boolean" />
    </data>
        <LinearLayout
            android:id="@+id/recycler_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@{isSubfolder ? @dimen/keyline_7 : @dimen/keyline_0}"
            tools:context=".views.FilesFragment"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grayed_out"
                android:layout_marginStart="@dimen/card_view_margin"
                android:layout_marginTop="@dimen/card_view_margin"
                android:layout_marginEnd="@dimen/keyline_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/constraint_layout_padding"
                    android:paddingEnd="@dimen/constraint_layout_padding"
                    android:paddingBottom="@dimen/constraint_layout_padding">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/color_on_surface"
                            android:contentDescription="@string/folder_expansion"
                            android:layout_gravity="center_vertical"
                            android:src="@{isExpanded ? @drawable/ic_expand_less : @drawable/ic_expand_more}"
                            android:padding="@dimen/keyline_4"
                            android:onClick="@{(view) -> listener.toggleFolderExpansion(folder, view)}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/folder_created"
                            android:tint="@color/color_on_surface"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="@dimen/keyline_4"
                            android:paddingEnd="@dimen/keyline_4"
                            app:srcCompat="@drawable/ic_folder"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/keyline_2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{folder.folderName}"
                                android:visibility="@{isSubfolder ? View.GONE : View.VISIBLE}"
                                android:textAppearance="@style/TextAppearance.AudidroidTheme.Headline7"  />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{folder.folderName}"
                                android:visibility="@{isSubfolder ? View.VISIBLE : View.GONE}"
                                android:textAppearance="@style/TextAppearance.AudidroidTheme.Body2"  />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{String.format(@string/folder_content_count,Integer.toString(folder.contentCount))}"
                                android:layout_marginTop="@dimen/keyline_0"
                                android:textAppearance="@style/TextAppearance.AudidroidTheme.Body2"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/button_popup_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:contentDescription="@string/popup_menu_button"
                        android:onClick="@{(view) -> listener.openFolderPopupMenu(folder, view)}"
                        android:padding="@dimen/keyline_2"
                        android:src="@drawable/ic_popup_menu"
                        android:tint="@color/color_on_surface"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recording_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{isExpanded ? View.VISIBLE : View.GONE}"
                android:adapter="@{recordingAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recording_item" />
        </LinearLayout>
</layout>
