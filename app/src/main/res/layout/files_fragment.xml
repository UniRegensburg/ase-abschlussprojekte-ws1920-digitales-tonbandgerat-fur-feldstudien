<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="filesViewModel"
            type="de.ur.mi.audidroid.viewmodels.FilesViewModel" />
        <variable
            name="folderViewModel"
            type="de.ur.mi.audidroid.viewmodels.FolderViewModel" />
        <variable
            name="recordingAdapter"
            type="de.ur.mi.audidroid.adapter.RecordingItemAdapter" />
        <variable
            name="folderListener"
            type="de.ur.mi.audidroid.adapter.FolderUserActionsListener" />
    </data>

    <FrameLayout
        android:id="@+id/files_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.FilesFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/keyline_1"
                    android:text="@string/recordings_unfiled"
                    android:textAppearance="@style/TextAppearance.AudidroidTheme.Caption" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recording_list_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/recording_item" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{filesViewModel.empty ? View.VISIBLE : View.GONE}">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/sad_face"
                        android:scaleType="center"
                        android:src="@drawable/ic_sentiment_dissatisfied"
                        android:layout_marginBottom="@dimen/keyline_5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_recordings"
                        android:textAppearance="@style/TextAppearance.AudidroidTheme.Subtitle1" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/keyline_2"
                    android:padding="@dimen/constraint_layout_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/files_container_internal"
                        android:padding="@dimen/keyline_2"
                        android:textAppearance="@style/TextAppearance.AudidroidTheme.Caption"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageButton
                        android:id="@+id/add_internal_folder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:contentDescription="@string/popup_menu_option_add_folder"
                        android:onClick="@{() -> folderViewModel.onAddInternalFolderClicked()}"
                        android:padding="@dimen/keyline_2"
                        android:src="@drawable/ic_create_new_folder"
                        android:tint="@color/color_on_surface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/folder_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/folder_item" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/keyline_2"
                    android:padding="@dimen/constraint_layout_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/files_container_external"
                        android:padding="@dimen/keyline_2"
                        android:textAppearance="@style/TextAppearance.AudidroidTheme.Caption"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageButton
                        android:id="@+id/add_external_folder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:contentDescription="@string/popup_menu_option_add_folder"
                        android:padding="@dimen/keyline_2"
                        android:src="@drawable/ic_create_new_folder"
                        android:tint="@color/color_on_surface"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/external_folder_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/folder_item" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>
