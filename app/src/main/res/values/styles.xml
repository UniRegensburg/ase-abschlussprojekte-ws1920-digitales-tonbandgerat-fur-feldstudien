<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.AudidroidTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.AudidroidTheme.BottomSheet.Modal
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.AudidroidTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.AudidroidTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="ThemeOverlay.AudidroidTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.AudidroidTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="AudidroidTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AudidroidTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="AudidroidTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AudidroidTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AudidroidTheme.DayNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AudidroidTheme.DayNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AudidroidTheme.Seekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">?colorPrimary</item>
        <item name="android:thumbTint">?colorPrimary</item>
    </style>

    <style name="Widget.AudidroidTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorOnBackground</item>
    </style>

</resources>
